<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PasswordView"/>
    <style name="PasswordView.TextView">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordView.EditText" parent="PasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="PasswordView.Divider">
        <item name="android:layout_width">@dimen/dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_1</item>
        <item name="android:layout_marginBottom">@dimen/dp_1</item>
    </style>

</resources>
